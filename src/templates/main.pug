include utils/mixins
include bem/main_elements
include bem/main_blocks

block variables

doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1, width=device-width")
    meta( name="format-detection" content="telephone=no")
    title #{pageTitle}
    meta(name="description", content=description)
    link(rel="shortcut icon" href=require('../../assets/img/favicon.png') type="image/x-icon")

    block head

  body(class=pageClass)
    .wrapper
      //- include ../includes/modules/header
      block header

      .content-wrapper

        block content

      //- include ../includes/modules/footer
      block footer

    block script