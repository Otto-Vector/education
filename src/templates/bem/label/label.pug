//- Все примеси в этом файле должны начинаться c имени блока (label)

mixin label(params)

  //- Принимает: {object}
  //-   text:  {string} - текст кнопки
  //-   mods:  {string} - список модификаторов
  //-   tag:   {string} - тег (если не span)
  //- Вызов:
        +label('Лейбл')
        +label('Лейбл', 'danger', 'div')
  -
    // список модификаторов
    var allMods = '';
    //Проверка на миксин без параметров так как 
    //при пустом params, не деструктурируются значения по умолчанию
    if (typeof(params) == 'undefined') {
    var params = {text: 'empty params in "label"'};
      }
    //деструктуризация params в переменные и задание им значений по умолчанию
    let {text='', mods='h3-style', tag= 'h3'} = params;

    if(mods !== '') {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' label_' + modsList[i].trim();
      }
    }

  #{tag}.label(class=allMods)&attributes(attributes)!= text
    block
